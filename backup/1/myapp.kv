#:import dp kivy.metrics.dp

<SquareButton@Button>:
    bold: True
    size_hint: None, None
    border: 0, 0, 0, 0

<BottomPanel>:
    spacing: dp(10)
    padding: dp(10)
    background_color: 0, 0, 0, 0

    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    SquareButton:
        text: ''
        background_normal: 'images/msg.png'
        size: root.button_size, root.button_size
        pos_hint: {'center_y': 0.5}

    SquareButton:
        text: ''
        background_normal: 'images/send_request.png'
        size: root.button_size, root.button_size
        pos_hint: {'center_y': 0.5}

    SquareButton:
        text: ''
        background_normal: 'images/applications.png'
        size: root.button_size, root.button_size
        pos_hint: {'center_y': 0.5}

    SquareButton:
        text: ''
        background_normal: 'images/profile.png'
        size: root.button_size, root.button_size
        pos_hint: {'center_y': 0.5}

<MainLayout>:
    orientation: 'vertical'
    spacing: dp(2)

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.png'

    BoxLayout:
        size_hint_y: 0.8
        Label:
            text: ''
            font_size: dp(20)
            halign: 'center'

    BottomPanel:
        size_hint_y: 0.2